<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.authendance">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/authendancelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/authendancelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PasswordReset"></activity>
        <activity android:name=".AdminActivity" />
        <activity android:name=".TeacherActivity" />
        <activity android:name=".StudentActivity" />
        <activity android:name=".Teacher" />
        <activity android:name=".Student" />
        <activity android:name=".RegisterScreen" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".GenerateCode" />
        <activity android:name=".CodeScanner" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>